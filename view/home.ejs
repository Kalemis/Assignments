<% include partials/head.ejs %>
<title>Dating app</title>

<!--navbar-->
<% include partials/header.ejs %>

<!--Body-->
<main class="home-main">

    <div class="filters">
        <a class="filter-button">Filter &#8594;</a>
        <form class="filter-options" style="display: none">
            <div>
                <input name="sort" type="radio" id="distance">
                <label for="distance">Afstand</label>
            </div>
            <div>
                <input name="sort" type="radio" id="new">
                <label for="new">Nieuw</label>
            </div>
            <div>
                <input name="sort" type="radio" id="suggestions">
                <label for="suggestions">Suggestions</label>
            </div>
        </form>
    </div>
        
    <section class="grid">
        <% for (var index = 0; index < data.length; index++) { %>
            <a class="tile" href="<%= data[index]._id %>">
                <% if (data[index].profile) { %>
                    <img alt="<%= data[index].firstname %>" src="/upload/<%= data[index].profile %>">
                <% } %>
                <div class="profile-item-title">
                    <h2><%= data[index].firstname + ' ' + data[index].lastname %></h2>
                    <h2><%= data[index].age %></h2>
                </div>
            </a>
        <% } %>
    </section>
</main>

<!--Footer-->
<% include partials/footer.ejs %>

<!--Script tags-->
<script src=/home.js></script>
