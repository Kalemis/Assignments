<% include partials/head.ejs %>
<title><%= data.name %> - Dating app</title>

<!--navbar-->
<% include partials/header.ejs %>
<div class="session">

  <%if (user.profile !== null) {%>
    <img class="sessionImage" src="/upload/<%= user.profile%>" alt="musician">
  <%}
  else {%>
    <img class="sessionImage" src="img/musician.jpg" alt="musician">
<%  }%>

<% if (login.firstname == login.firstname) {%>
  <a class="lastLogIn" href="/<%= user._id %>">Welcome <strong><%= login.firstname%></strong> </a>
<%}%>
</div>
<!--Body-->
<main class="profile-main">
    <section class="profile-tile">
        <% if (data.profile) { %>
            <img alt="<%= data.name %>" class="profile-picture" src="/upload/<%= data.profile %>">
        <% } %>
        <div class="profile-item-title">
            <h2><%= data.firstname + ' ' + data.lastname %></h2>
            <h2><%= data.age %></h2>
        </div>
        <div class="profile-item-content">
            <div>
                <p>Woonplaats:</p>
                <p><%= data.location %></p>
            </div>
            <div class="bio">
                <p>Bio:</p>
                <p><%= data.bio %></p>
            </div>
            <button id=js-remove data-id="<%= data._id %>" class=danger>Verwijder</button>
            <p class="js-delete">Het profiel kon niet verwijderd worden!</p>
        </div>
    </section>
</main>

<!--Footer-->
<% include partials/footer.ejs %>

<!--Script tags-->
<% include partials/tail.ejs %>
