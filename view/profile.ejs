<% include partials/head.ejs %>
<title><%= data.name %> - Dating app</title>

<!--navbar-->
<% include partials/header.ejs %>

<!--Body-->
<main class="profile-main">
    <section class="profile-tile">
        <% if (data.profile) { %>
            <img alt="<%= data.name %>" class="profile-picture" src="/upload/<%= data.profile %>">
        <% } %>
        <div class="profile-item-title">
            <h2><%= data.firstname + ' ' + data.lastname %></h2>
            <h2><%= data.age %></h2>
        </div>
        <div class="profile-item-content">
            <div>
                <p>Hobby's:</p>
                <ul>
                    <li>Zingen</li>
                    <li>Dansen</li>
                    <li>Uitgaan</li>
                </ul>
            </div>
            <div>
                <p>Woonplaats:</p>
                <p>Amsterdam</p>
            </div>
            <div class="bio">
                <p>Bio:</p>
                <p>“The chief enemy of creativity is good sense.” - Pablo Picasso</p>
            </div>
            <button id=js-remove data-id="<%= data._id %>" class=danger>Remove</button>
            <p class="js-delete">Could not delete!</p>
        </div>
    </section>
</main>

<!--Footer-->
<% include partials/footer.ejs %>

<!--Script tags-->
<% include partials/tail.ejs %>